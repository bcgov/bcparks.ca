{
  "kind": "collectionType",
  "collectionName": "sites",
  "info": {
    "name": "Site",
    "description": "Site"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "slug": {
      "type": "string"
    },
    "siteName": {
      "type": "string",
      "required": true
    },
    "siteNumber": {
      "type": "integer"
    },
    "status": {
      "type": "string"
    },
    "establishedDate": {
      "type": "date"
    },
    "repealedDate": {
      "type": "date"
    },
    "url": {
      "type": "string"
    },
    "latitude": {
      "type": "float"
    },
    "longitude": {
      "type": "float"
    },
    "mapZoom": {
      "type": "integer"
    },
    "orcsSiteNumber": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "protectedArea": {
      "via": "sites",
      "model": "protected-area",
      "required": true
    },
    "parkActivities": {
      "via": "site",
      "collection": "park-activity"
    },
    "parkFacilities": {
      "via": "site",
      "collection": "park-facility"
    },
    "isUnofficialSite": {
      "type": "boolean"
    },
    "note": {
      "type": "string"
    },
    "hasDayUsePass": {
      "type": "boolean"
    },
    "description": {
      "type": "richtext"
    },
    "locationNotes": {
      "type": "richtext"
    },
    "parkOperation": {
      "via": "site",
      "model": "park-operation"
    }
  }
}
