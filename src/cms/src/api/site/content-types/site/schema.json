{
  "kind": "collectionType",
  "collectionName": "sites",
  "info": {
    "singularName": "site",
    "pluralName": "sites",
    "displayName": "Site",
    "name": "site",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "slug": {
      "type": "string"
    },
    "siteName": {
      "type": "string",
      "required": true
    },
    "siteNumber": {
      "type": "integer"
    },
    "legalStatus": {
      "type": "enumeration",
      "enum": ["Active", "Repealed", "Closed", "Transitioned"],
      "default": "Active"
    },
    "isDisplayed": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "establishedDate": {
      "type": "date"
    },
    "repealedDate": {
      "type": "date"
    },
    "url": {
      "type": "string"
    },
    "latitude": {
      "type": "float"
    },
    "longitude": {
      "type": "float"
    },
    "mapZoom": {
      "type": "integer"
    },
    "orcsSiteNumber": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "protectedArea": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::protected-area.protected-area",
      "inversedBy": "sites",
      "required": true
    },
    "parkActivities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::park-activity.park-activity",
      "mappedBy": "site"
    },
    "parkFacilities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::park-facility.park-facility",
      "mappedBy": "site"
    },
    "parkCampingTypes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::park-camping-type.park-camping-type",
      "mappedBy": "site"
    },
    "isUnofficialSite": {
      "type": "boolean"
    },
    "note": {
      "type": "string"
    },
    "description": {
      "type": "customField",
      "options": {
        "preset": "toolbar"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "safetyInfo": {
      "type": "customField",
      "options": {
        "preset": "toolbar"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "locationNotes": {
      "type": "customField",
      "options": {
        "preset": "toolbar"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "reservations": {
      "type": "customField",
      "options": {
        "preset": "toolbar"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "parkOperation": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::park-operation.park-operation",
      "mappedBy": "site"
    },
    "managementDocuments": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::management-document.management-document",
      "mappedBy": "sites"
    },
    "parkPhotos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::park-photo.park-photo",
      "mappedBy": "site"
    },
    "parkGuidelines": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::park-guideline.park-guideline",
      "mappedBy": "site"
    },
    "trailReports": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::trail-report.trail-report",
      "mappedBy": "sites"
    },
    "parkOperationDates": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::park-operation-date.park-operation-date",
      "mappedBy": "site"
    },
    "parkOperationSubAreas": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::park-operation-sub-area.park-operation-sub-area",
      "mappedBy": "site"
    },
    "audioClips": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::audio-clip.audio-clip",
      "mappedBy": "sites"
    },
    "parkFeatures": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::park-feature.park-feature",
      "mappedBy": "site"
    },
    "parkAreas": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::park-area.park-area",
      "mappedBy": "site"
    }
  }
}
